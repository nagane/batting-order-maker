%html
  %head
    %script{:type => 'text/javascript', :src => "../js/jquery-2.1.4.min.js"}
    %link{:rel => "stylesheet", :href => "/inputdata.css"}
  %body
    %h1 INPUT DATA
    %a{ href: "/"} home
    %p= @order_elements
    %p =================
    %form{:action => "/confirm-userdata", :method => "post"}
      %input{:type => "text",:name => "name"}
      - @order_elements.each do |e|
        -# この辺のレイアウトとか
        %p= e
        %select{:name => e }
          - (0..10).each do |e|
            - if e == 0
              %option{:value => e,:selected => e }
                #{e}
            - else
              %option{:value => e}
                #{e}
        %br
      %input{:type => "hidden",:name => "hash",:value=> @order_key }
      %input{:type => "submit",:value => "send"}
