%html
  %head
    %script{:type => 'text/javascript', :src => "../js/jquery-2.1.4.min.js"}
    %link{:rel => "stylesheet", :href => "/inputdata.css"}
  %body
    %h1 INPUT DATA
    %a{ href: "/"} home
    %p= @order_elements
    %p =================
    .items
      %form{:action => "/create-user", :method => "post"}
        - id = 0
        - @order_elements.each do |e|
          -# この辺のレイアウトとか、チェックする順番JSとか
          -# あとユーザデータの設計
          %input{:type => "checkbox", :name => "elm[]", :value => e, :id =>id}
          %p= e
          %br
          - id = id + 1
          - num = 1..10
          %select
            - num.each do |e|
              %option{:value => e,:selected => e.odd? }
                #{e}の値
        %input{:type => "submit",:value => "send"}
      %script{:type => 'text/javascript', :src => "../js/checkbox.js"}
